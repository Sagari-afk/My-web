<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("includes/head.ejs") %>
    <link rel="stylesheet" href="/css/arts.css" />
    <script src="js/arts.js" defer></script>
  </head>
  <body>
    <%- include("includes/header.ejs") %>
    <section class="centered-container head">
      <div class="text-centered">
        <h1>GALLERY</h1>
        <p>Artful Expression in the Digital Realm</p>
      </div>
      <div class="cards">
        <img class="card active" src="<%= allArts[0].img_url %>" alt="" />
        <img class="card" src="<%= allArts[1].img_url %>" alt="" />
        <img class="card" src="<%= allArts[2].img_url %>" alt="" />
        <img class="card" src="<%= allArts[3].img_url %>" alt="" />
      </div>
    </section>

    <section class="centered-container">
      <form class="search">
        <img src="/assets/search.png" alt="" />
        <input
          placeholder="Search by key word"
          type="text"
          class="search-by-title"
          id="search"
          name="search"
        />
      </form>

      <div class="arts-container">
        <ul>
          <% if (arts.length === 0) { %>
          <p>NO ARTS</p>
          <% } else { %> <% for (const art of arts) { %> <%-
          include("includes/artItem.ejs", { artUrl: art.img_url, description:
          art.description, artLikes: art.likes_count }) %> <% } %> <% } %>
        </ul>
      </div>
      <!-- <div class="flex margin">
        <button id="prev-btn" data-page="<%= currentPage - 1 %>"><</button>
        <button
          id="next-btn"
          data-page="<%= currentPage + 1 %>"
          data-total-pages="<%= totalPages %>"
        >
          >
        </button>
      </div> -->
    </section>

    <%- include("includes/footer.ejs") %>
  </body>
</html>
